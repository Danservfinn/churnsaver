{
	"version": 2,
	"builds": [
		{
			"src": "package.json",
			"use": "@vercel/next"
		}
	],
	"headers": [
		{
			"source": "/api/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "no-cache, no-store, must-revalidate"
				}
			]
		}
	],
	"crons": [
		{
			"path": "/api/scheduler/reminders",
			"schedule": "0 9 * * *"
		}
	]
}
